<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/userText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/left_background"
        android:textSize="23sp"
        android:text="Hello!!"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/botText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/right_background"
        android:textSize="23sp"
        android:text="Welcome! I am Erika-chan!\nYour chat buddy!"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:padding="8dp"
        android:layout_below="@+id/userText"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/botText"
        android:layout_marginTop="60dp"
        android:textSize="18sp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textColor="@android:color/tertiary_text_light"
        android:text="Hello! I am Erika-chan!\n- I've been built by Akshit for the purpose of
becoming your talking buddy!\n- Please try to type with proper spellings so that I can understand
and give proper replies.\n- I am still learning and am a kid so please forgive me if I don't understand anything!"
        android:textAlignment="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp"
            android:layout_centerVertical="true"
            android:background="@drawable/back_addtask"
            android:layout_toStartOf="@+id/sendBtn">

            <EditText
                android:id="@+id/textField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#fff"
                android:hint="Type your message!"
                android:textSize="18sp" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/sendBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:elevation="4dp"
            android:layout_centerInParent="true"
            android:background="@drawable/back_fab"
            android:src="@drawable/ic_send_white_24dp"
            android:padding="40dp"
            android:scaleType="centerCrop"
            android:rotation="180"/>

    </RelativeLayout>

</RelativeLayout>